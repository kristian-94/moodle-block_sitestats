<div class="row">
    <div class="col-md-3 text-center">
        <i class="fa fa-users fa-2x"></i>
        <h2>{{total_active_users}}</h2>
        <p>Total Active Users</p>
    </div>
    <div class="col-md-3 text-center">
        <i class="fa fa-book fa-2x"></i>
        <h2>{{number_of_courses}}</h2>
        <p>Number of
            Courses</p>
    </div>
    <div class="col-md-3 text-center">
        <i class="fa fa-user-plus fa-2x"></i>
        <h2>{{total_enrolments}}</h2>
        <p>Total Enrollments</p>
    </div>
    <div class="col-md-3 text-center">
        <i class="fa fa-award fa-2x"></i>
        <h2>{{total_completions}}</h2>
        <p>Total Completions</p>
    </div>
</div>

<h5>Current top {{topcourseslimit}} courses</h5>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Course</th>
        <th>Enrollments</th>
    </tr>
    </thead>
    {{#top_courses}}
        <tr>
            <td><a href="{{link}}">{{fullname}}</a></td>
            <td>{{enrolments}}</td>
        </tr>
    {{/top_courses}}
</table>

<hr>
<h5>{{topcourseslimit}} most recently added courses</h5>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Course</th>
        <th>Enrollments</th>
    </tr>
    </thead>
    {{#new_courses}}
        <tr>
            <td><a href="{{link}}">{{fullname}}</a></td>
            <td>{{enrolments}}</td>
        </tr>
    {{/new_courses}}
</table>
